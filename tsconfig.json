{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2020"],
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@src/*": ["src/*"]
    },
    "outDir": "./dist",
    "baseUrl": ".",
    "removeComments": true,
    "allowJs": true,
    "rootDir": "./src",
    "sourceMap": true,
    "moduleResolution": "node",
    "jsx": "react",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["./src/**/*", "global.d.ts"]
}
